<row>
  <h1><%= @skill.name %></h1>
  <p><%= link_to "Edit Skill", edit_skill_path(@skill) %></p>
</row>
<row>
    <div class="small-2 medium-4 large-4 columns">
      <h5>Category:</h5>
        <p><%= @skill.category %></p>
      <h5>Description:</h5>
        <p><%= @skill.description %></p>
      <h5>Wikipedia URL:</h5>
        <p><%= @skill.url %></p>
    </div>

  <div class="small-2 medium-4 large-4 columns">
    <h5>Users who know this skill:</h5>
      <p>Sort by<p>
        <p><% @skill.get_users_had.each do |user| %></p>
          <%= user.username %>
        <% end %>
  </div>
  <div class="small-2 medium-4 large-4 columns">
    <h5>Users who want to know this skill:</h5>
    <p>Sort by location, expertise_level, expertise level and location<p>
      <p><% @skill.get_users_wanted.each do |user| %></p>
        <%= user.username %>
      <% end %>
    </div>
</row>
