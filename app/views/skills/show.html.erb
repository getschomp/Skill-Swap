<div class="restrict-width">

  <row>
    <h1><%= @skill.name %></h1>
    <p><%= link_to "Edit Skill", edit_skill_path(@skill) %></p>
  </row>
  <row>
      <div>
        <h4>Category:</h4>
          <p><%= @skill.category %></p>
        <h4>Description:</h4>
          <p><%= @skill.description %></p>
        <h4>Wikipedia URL:</h4>
          <p><%= @skill.url %></p>
      </div>

    <div class="small-12 medium-4 large-4 columns text-center">
      <h5>Users who know this skill:</h5>

          <p><% @skill.get_users_had.each do |user| %></p>
            <%= link_to user.username, user_path(user) %>
          <% end %>
    </div>
    <div class="small-12 medium-4 large-4 columns text-center">
      <h5>Users who want to know this skill:</h5>
        <p><% @skill.get_users_wanted.each do |user| %></p>
          <%= link_to user.username, user_path(user) %>
        <% end %>
      </div>
  </row>
</div>
