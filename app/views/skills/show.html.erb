
<row>

    <div class="small-2 medium-4 large-4 columns">
      <h1><%= @skill.name %></h1>
      <h5>Category:</h5>
        <p><%= @skill.category %></p>
      <h5>Description:</h5>
        <p><%= @skill.description %></p>
      <h5>Wikipedia URL:</h5>
        <p><%= @skill.url %></p>
    </div>

  <!-- #loop through users that have the skill
  loop through users that want ot learn the skill -->
  <div class="small-2 medium-4 large-4 columns">
    <h5>Users who know this skill:</h5>
      <p>Sort by<p>
        <p><% @skill.had_skills.each do |had_skill| %></p>
              <%= had_skill.user.username %>
          <% end %>
  </div>
  <div class="small-2 medium-4 large-4 columns">
    <h5>Users who want to know this skill:</h5>
    <p>Sort by location, expertise_level, expertise level and location<p>
      <p><% @skill.wanted_skills.each do |wanted_skill| %></p>
        <%= wanted_skill.user.username %>
      <% end %>
    </div>
</row>
