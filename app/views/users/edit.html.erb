<h1>Editing Profile for <%= @user.username.capitalize %></h1>

<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= f.label :about_me %><br>
  <%= f.text_area :about_me %>
</div>

<div class="field">
  <%= f.label :gender %><br>
  <%= f.select :gender, ['Male', 'Female', 'Other'] %>
</div>

<h4>Location<h4>
<div class="field">
<%= f.fields_for :locations, Location.new do |b| %>
  <fieldset>
  <%= b.label :city %><br>
  <%= b.text_area :city %>
  <%= b.label :state %><br>
  <%= b.text_area :state %>
  </fieldset>
</div>
<% end %>

<div class="actions">
  <%= f.submit "Edit Basic Info" %>
</div>

<% link_to "Add a skill you want to know", new_user_want_skill_path(@user) %>
<% link_to "Add a skill you know",  new_user_have_skill_path(@user)%>
<% end %>
