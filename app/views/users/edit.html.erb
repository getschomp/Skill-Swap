
<row>
<h2>Editing Profile for <%= @user.username.capitalize %></h2>
</row>

<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<row>
  <div class="small-2 medium-4 large-4 columns">
    <h4>Basic Info</h4>
    <div class="field">
      <%= f.label :about_me %><br>
      <%= f.text_area :about_me %>
    </div>

    <div class="field">
      <%= f.label :gender %><br>
      <%= f.select :gender, ['Male', 'Female', 'Other'] %>
    </div>


    <div class="actions">
      <%= f.submit "Edit Basic Info" %>
    </div>
  </div>
</row>

<row>
  <div class="small-2 medium-4 large-4 columns">
    <div class="wanted_skill">

      <h4>Add a Skill You Want to Know</h4>
      <%= link_to "Add Skill", new_user_wanted_skill_path(@user) %>

      <%= f.fields_for :wanted_skill do |b| %>
      <fieldset>
        <%= b.label :skill_id, "Wanted Skill" %><br/>
        <%= b.select :skill_id, Skill.all.collect { |skill| [skill.name, skill.id ] } %><br/>
        <%= b.label :current_level, "How well do you know this skill?" %><br/>
        <%= b.select :current_level, get_skill_levels %><br/>
        <%= b.label :teachers_skill, "What skill level would you perfer your teacher to have?" %><br/>
        <%= b.select :teachers_skill, get_skill_levels %><br/>
        <%= b.label :why_description, "Describe why wou want to learn this skill?" %><br/>
        <%= b.text_area :why_description %><br/>
        <%= b.submit 'Edit Skill' %><br/>
      </fieldset>
      <% end %>
    </div>
  </div>
</row>
<row>
  <div class="small-2 medium-4 large-4 columns">
    <div class="had_skill">
      <h4>Add a skill you know</h4>
      <%= link_to "Add Skill", new_user_had_skill_path(@user) %>
      <%= f.fields_for :had_skill, HadSkill.new do |b| %>
      <fieldset>
        <%= b.label :skill_id, "Known Skill" %><br/>
        <%= b.select :skill_id, Skill.all.collect { |skill| [skill.name, skill.id ] } %><br/>
        <%= b.label :expertise_level, "How well do you know this skill?" %><br/>
        <%= b.select :expertise_level, get_skill_levels %><br/>
        <%= b.label :experience, "Describe your experience with this skill." %><br/>
        <%= b.text_area :experience %><br/>
        <%= b.submit 'Edit Skill' %><br/>
      </fieldset>
      <% end %>

    </div>
    <% end %>
  </div>
</row>
