<row>
    <h1>Profile for: <%= @user.username %></h1>
      <%= link_to "Send Message", "#", class: "tiny button start-conversation",
      "data-sid" => current_user.id, "data-rip" => @user.id %>  
</row>
<row>
  <div class="small-12 medium-6 large-4 columns">
    <h5>Basic Info</h5>
      <ul>
        <h5>About me:</h5>
        <p><%= @user.about_me %></p>
      </ul>
      <ul>
        <h5>Gender:</h5>
        <p><%= @user.gender %></p>
      </ul>

    </ul>
  </div>
  <div class="small-12 medium-6 large-4 columns wanted_skill">
    <h3>Skills <%= @user.username %> wants to know</h3>
    <% if current_user == @user %>
    <div class="button">
        <%= link_to "Add Skill", new_user_wanted_skill_path(@user) %>
    </div>
    <% end %>
    <ul>
      <h5></h5>
      <p><% @user.wanted_skills.each do |s| %></p>
        <%= s.skill.name %>
        <% if current_user == @user %>
          <div class="tiny button">
            <%= link_to "Delete Skill", user_wanted_skill_path(@user, s), :method => :delete %>
          </div>
        <% end %>
      <% end %>
    </ul>
  </div>
  <div class="small-12 medium-6 large-4 columns had_skill">
    <h3>Skills <%= @user.username %> knows</h3>
    <% if current_user == @user %>
      <div class="button">
        <%= link_to "Add Skill", new_user_had_skill_path(@user) %>
      </div>
    <% end %>
    <ul>
      <h5></h5>
      <p><% @user.had_skills.each do |s| %></p>
        <%= s.skill.name %>
        <% if current_user == @user %>
          <div class="tiny button">
            <%= link_to "Delete Skill", user_had_skill_path(@user, s), :method => :delete %>
          </div>
        <% end %>
      <% end %>
    </ul>
  </div>

</row>
